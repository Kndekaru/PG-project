<div class="container">
  <h1><%= @post.title %></h1>
  <p><%= @post.content %></p>
</div>
<% if current_user == @post.user %>
  <%= link_to "Edit Post", edit_post_path %>
  <%= link_to "Delete Post", post_path(@post), :method => :delete %>
<% end %>
<h2 align="center">Comments:</h2>
<%= render @post.comments %>
<% if logged_in? %>
  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>
<% end %>
